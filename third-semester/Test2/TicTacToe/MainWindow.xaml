<Window x:Class="TicTacToe.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicTacToe"
        mc:Ignorable="d"
        Title="TicTacToe" Height="600" Width="600"
        MinHeight="500" MinWidth="500">
    
    <UniformGrid x:Name="grid" Rows="3" Columns="3">
        <Button x:Name="b_0_0" Click="OnClick"/>
        <Button x:Name="b_0_1" Click="OnClick"/>
        <Button x:Name="b_0_2" Click="OnClick"/>
        <Button x:Name="b_1_0" Click="OnClick"/>
        <Button x:Name="b_1_1" Click="OnClick"/>
        <Button x:Name="b_1_2" Click="OnClick"/>
        <Button x:Name="b_2_0" Click="OnClick"/>
        <Button x:Name="b_2_1" Click="OnClick"/>
        <Button x:Name="b_2_2" Click="OnClick"/>
    </UniformGrid>
</Window>
